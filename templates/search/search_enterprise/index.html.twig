
{% extends 'base/base.html.twig' %}
{% block title %}Recherche{% endblock %}

{% block content %}
    <div id="search_enterprise">

<div class="ui three column stackable grid container">
    <div class="column">
        <div class="ui search selection dropdown">
            <input type="hidden" name="nom_etablissement" >
            <i class="dropdown icon"></i>
            <div class="default text">Établissement</div>
            <div class="menu">
                <div class="item" data-value="Orange">Orange</div>
                <div class="item" data-value="Worldline">Worldline</div>
                <div class="item" data-value="Google">Google</div>
                <div class="item" data-value="Amazon">Amazon</div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="ui search selection dropdown">
            <input type="hidden" name="nom_entreprise" >
            <i class="dropdown icon"></i>
            <div class="default text">Ville</div>
            <div class="menu">
                <div class="item" data-value="Orange">Tours</div>
                <div class="item" data-value="Worldline">Paris</div>
                <div class="item" data-value="Google">Orléan</div>
                <div class="item" data-value="Amazon">Lille</div>
            </div>
        </div>
    </div>

</div>

<div class="ui three column stackable grid container">
    <div class="column">
        <div class="ui form">
            <input type="text" name="number_siret" placeholder="Numéro SIRET">

        </div>
    </div>



    <div class="column">
        <!--  <div class="ui toggle checkbox">
          <input type="checkbox" id="Entreprise" />
          <label>Entreprise</label>
        </div>
      -->
    </div>
    <div class="column">
        <button class="ui primary button" v-on:click="get_data">Recherche</button>
    </div>

</div>

<div class="ui center aligned one column stackable grid container center">

</div>

<div class="ui one column stackable grid container">
    <div class="column">
        <table id="data_table" class="ui compact selectable striped celled table" cellspacing="0" width="100%">
            <thead>
            <tr>

                <th>Nom Établissement</th>
                <th>Num Siren</th>
                <th>Ville</th>
                {#<th>Site Web Entreprise</th>#}
                {#<th>Commentaire Entreprise</th>#}
            </tr>
            </thead>
            <tbody>
            {#<tr>#}
                {#<input type="hidden" value="1" />#}
                {#<td>${e.nomentreprise}</td>#}
                {#<td>${e.nomentreprise}</td>#}
                {#<td>${e.id}</td>#}
                {#<td>${e.id}</td>#}
                {#<td>${e.id}</td>#}
                {#<td>${e.id}</td>#}
            {#</tr>#}
            </tbody>
        </table>

    </div>


</div>
    </div>
{% endblock %}
    {% block js %}

<!--Importer les javascript semantic et jquery-->
        <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="/css/calendar.min.js"></script>

        <script src="/js/customjs/custom-datatable.js"></script>
        <script src="/js/recherche.js"></script>
        <script>
            $('.ui.form')
                .form({
                    fields: {
                        number_siret : ['minLength[14]', 'empty']
                    }
                })
            ;
        </script>
{% endblock %}
